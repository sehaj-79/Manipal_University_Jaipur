<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassActivity"
    android:background="#DAD8D8">


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/centurygothicbold"
                android:text="Access Information"
                android:textColor="#212121"
                android:textSize="35dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:id="@+id/access_frame1"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/vector_square"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:id="@+id/image_incharge"
                        android:layout_width="35dp"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/vector_access_incharge"
                        />



                </RelativeLayout>


            </FrameLayout>


            <TextView
                android:id="@+id/access_text_incharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/access_frame1"
                app:layout_constraintEnd_toEndOf="@id/access_frame1"
                app:layout_constraintTop_toBottomOf="@id/access_frame1"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/centurygothic"
                android:gravity="center|start|left"
                android:rotation="0"
                android:text="Incharge"
                android:textColor="#212121"
                android:textSize="13sp" />





            <FrameLayout
                android:id="@+id/access_frame2"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/vector_square"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image_accesslist"
                        android:layout_width="37dp"
                        android:layout_height="43dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/vector_access_list"
                        />


                </RelativeLayout>



            </FrameLayout>


            <TextView
                android:id="@id/access_text_accesslist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/access_frame2"
                app:layout_constraintEnd_toEndOf="@id/access_frame2"
                app:layout_constraintTop_toBottomOf="@id/access_frame2"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/centurygothic"
                android:gravity="center|start|left"
                android:rotation="0"
                android:text="Access"
                android:textColor="#212121"
                android:textSize="13dp" />



            <FrameLayout
                android:id="@+id/access_frame3"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/vector_square"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.85"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" >



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <ImageView
                        android:id="@+id/image_requests"
                        android:layout_width="35dp"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/vector_access_requests"
                        />


                </RelativeLayout>




            </FrameLayout>


            <TextView
                android:id="@id/access_text_requests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/access_frame3"
                app:layout_constraintEnd_toEndOf="@id/access_frame3"
                app:layout_constraintTop_toBottomOf="@id/access_frame3"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/centurygothic"
                android:gravity="center|left"
                android:maxLines="1"
                android:rotation="0"
                android:text="Requests"
                android:textColor="#212121"
                android:textSize="13sp"
                />



            <FrameLayout
                android:id="@+id/frame_incharge"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginTop="50dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/access_text_incharge">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/access_textView32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/centurygothicbold"
                        android:text="Incharge List"
                        android:textColor="#212121"
                        android:textSize="25dp" />

                    <Spinner
                        android:id="@+id/abc"
                        style="@style/Material.Widget.Spinner"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/access_textView32"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/spinner_bg"
                        android:entries="@array/dd_list" />


                    <androidx.recyclerview.widget.RecyclerView

                        android:id="@+id/rq_recycler_view32"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/abc"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp" />





                </RelativeLayout>

            </FrameLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/vector_line_home"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/access_text_incharge"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"/>

            <FrameLayout
                android:id="@+id/frame_accesslist"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginTop="50dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/access_text_incharge">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/access_textView33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/centurygothicbold"
                        android:text="Access List"
                        android:textColor="#212121"
                        android:textSize="25dp" />

                    <Spinner
                        android:id="@+id/abc2"
                        style="@style/Material.Widget.Spinner"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/access_textView33"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/spinner_bg"
                        android:entries="@array/dd_list" />

                    <TextView
                        android:id="@+id/tv_no_permission_access"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#212121"
                        android:textSize="20sp"
                        android:visibility="gone"
                        android:fontFamily="@font/centurygothic"
                        android:text="You do not have Permission to access this Section"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/abc2"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        />


                    <androidx.recyclerview.widget.RecyclerView

                        android:id="@+id/rq_recycler_view33"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/abc2"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp" />





                </RelativeLayout>

            </FrameLayout>




            <FrameLayout
                android:id="@+id/frame_requests"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginTop="50dp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/access_text_incharge">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/access_textView34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/centurygothicbold"
                        android:text="Requests"
                        android:textColor="#212121"
                        android:textSize="25dp" />

                    <Spinner
                        android:id="@+id/abc1"
                        style="@style/Material.Widget.Spinner"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/access_textView34"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/spinner_bg"
                        android:entries="@array/dd_list" />

                    <TextView
                        android:id="@+id/tv_no_permission_rq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#212121"
                        android:textSize="20sp"
                        android:visibility="gone"
                        android:fontFamily="@font/centurygothic"
                        android:text="You do not have Permission to access this Section"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/abc1"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        />


                    <androidx.recyclerview.widget.RecyclerView

                        android:id="@+id/rq_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/abc1"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp" />





                </RelativeLayout>

            </FrameLayout>


            <FrameLayout
                android:id="@+id/frame_no_permission_access"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginTop="50dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frame_accesslist">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#212121"
                        android:textSize="20sp"
                        android:fontFamily="@font/centurygothic"
                        android:text="You do not have Permission to access this Section"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="50dp"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        />



                </RelativeLayout>

            </FrameLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DAD8D8"
        android:outlineAmbientShadowColor="#DAD8D8"
        android:outlineSpotShadowColor="#DAD8D8"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation" />




</androidx.constraintlayout.widget.ConstraintLayout>