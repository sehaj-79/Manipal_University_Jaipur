<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#212121">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/faculty_item_edit_image"
        android:layout_alignTop="@+id/faculty_item_edit_designtion"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/boy" />

    <EditText
        android:layout_toStartOf="@+id/faculty_item_edit_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:id="@+id/faculty_item_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/centurygothicbold"
        android:text="Name of Faculty"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/faculty_item_edit_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/faculty_item_edit_image" />

    <EditText
        android:layout_toStartOf="@+id/faculty_item_edit_image"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/faculty_item_edit_name"
        android:id="@+id/faculty_item_edit_designtion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" android:fontFamily="@font/centurygothic"
        android:text="Designation"
        android:textColor="@android:color/white"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/faculty_item_edit_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/faculty_item_edit_name"
        app:layout_constraintTop_toBottomOf="@+id/faculty_item_edit_name" />

    <EditText
        android:layout_below="@+id/faculty_item_edit_designtion"
        android:id="@+id/faculty_item_edit_department"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@+id/faculty_item_edit_image"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/centurygothic"
        android:text="Department"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toStartOf="@+id/faculty_item_edit_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/faculty_item_edit_designtion"
        app:layout_constraintTop_toBottomOf="@+id/faculty_item_edit_designtion" />

    <EditText
        android:layout_below="@+id/faculty_item_edit_department"
        android:id="@+id/faculty_item_edit_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@+id/faculty_item_edit_image"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/centurygothic"
        android:text="School"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toStartOf="@+id/faculty_item_edit_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/faculty_item_edit_department"
        app:layout_constraintTop_toBottomOf="@+id/faculty_item_edit_department" />

    <EditText
        android:layout_below="@+id/faculty_item_edit_school"
        android:id="@+id/faculty_item_edit_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@+id/faculty_item_edit_image"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/centurygothic"
        android:text="Mail"
        android:layout_marginStart="16dp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/faculty_item_edit_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/faculty_item_edit_school"
        app:layout_constraintTop_toBottomOf="@+id/faculty_item_edit_school" />

    <EditText
        android:textStyle="italic"
        android:id="@+id/faculty_item_edit_contact"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/faculty_item_edit_image"
        android:layout_alignStart="@+id/faculty_item_edit_image"
        android:layout_alignEnd="@+id/faculty_item_edit_image"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="-1dp"
        android:fontFamily="@font/centurygothic"
        android:text="Contact"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/faculty_item_edit_image"
        app:layout_constraintTop_toTopOf="@+id/faculty_item_edit_mail" />
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@id/faculty_item_edit_mail"
        android:background="@android:color/transparent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_bg"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:text="Edit Data"/>
    
</RelativeLayout>