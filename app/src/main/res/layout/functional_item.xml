<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#DAD8D8">


    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/functional_item_image"
        android:layout_alignTop="@+id/Functional_item_designtion"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/boy" />

    <TextView
        android:id="@+id/functional_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/centurygothicbold"
        android:text="Name of Functional"
        android:textColor="#212121"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_toStartOf="@+id/functional_item_image"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/functional_item_name"
        android:id="@+id/Functional_item_designtion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" android:fontFamily="@font/centurygothic"
        android:text="Designation"
        android:textColor="#212121"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/functional_item_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/functional_item_name"
        app:layout_constraintTop_toBottomOf="@+id/functional_item_name" />

    <TextView
        android:layout_below="@+id/Functional_item_designtion"
        android:id="@+id/Functional_item_about"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@+id/functional_item_image"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/centurygothic"
        android:text="About"
        android:textColor="#212121"
        app:layout_constraintEnd_toStartOf="@+id/functional_item_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Functional_item_designtion"
        app:layout_constraintTop_toBottomOf="@+id/Functional_item_designtion" />

    <TextView
        android:id="@+id/Functional_item_achievements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Functional_item_about"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="75dp"
        android:fontFamily="@font/centurygothic"
        android:text="Achievements"
        android:textColor="#212121"
        app:layout_constraintEnd_toStartOf="@+id/functional_item_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Functional_item_about"
        app:layout_constraintTop_toBottomOf="@+id/Functional_item_about" />

</RelativeLayout>